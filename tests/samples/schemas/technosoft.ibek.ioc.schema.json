{
  "$defs": {
    "homing": {
      "enum": [
        "LSN",
        "LSP"
      ],
      "title": "homing",
      "type": "string"
    },
    "motorTML_Axis": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "motorTML.Axis",
          "default": "motorTML.Axis",
          "description": "Technosoft motion axis",
          "title": "Type"
        },
        "entity_enabled": {
          "default": true,
          "description": "enable or disable this entity instance",
          "title": "Entity Enabled",
          "type": "boolean"
        },
        "controller": {
          "description": "Reference to the controller",
          "title": "Controller"
        },
        "axisName": {
          "description": "The axis name",
          "title": "Axisname",
          "type": "string"
        },
        "CONFIG": {
          "default": "{{controller.hostid}}AXIS_SETUP_{{num}}=$(SUPPORT)/motorTechnosoft/tml_lib/config/config.txt,AXIS_ID_{{num}}={{num}},AXIS_HOMING_SW_{{num}}=LSN",
          "description": "Axis configuration string to add to the controller configuration",
          "title": "Config",
          "type": "string"
        },
        "axisConfiguration": {
          "default": "{{ __utils__.get_var('motorTML.axisConfiguration').append(CONFIG) }}",
          "description": "Adds an axis configuration entry to the controller's list",
          "title": "Axisconfiguration",
          "type": "string"
        },
        "num": {
          "default": "{{ __utils__.counter(\"motorTML.axisCount\", start=0) }}",
          "description": "Counts the number of axes declared",
          "title": "Num",
          "type": "string"
        }
      },
      "required": [
        "controller",
        "axisName"
      ],
      "title": "motorTML_Axis",
      "type": "object"
    },
    "motorTML_Controller": {
      "additionalProperties": false,
      "properties": {
        "type": {
          "const": "motorTML.Controller",
          "default": "motorTML.Controller",
          "description": "Technosoft motion controller connected to a serial line",
          "title": "Type"
        },
        "entity_enabled": {
          "default": true,
          "description": "enable or disable this entity instance",
          "title": "Entity Enabled",
          "type": "boolean"
        },
        "controllerName": {
          "description": "The name of the controller",
          "title": "Controllername",
          "type": "string"
        },
        "P": {
          "description": "Device PV Prefix",
          "title": "P",
          "type": "string"
        },
        "TTY": {
          "description": "TTY",
          "title": "Tty",
          "type": "string"
        },
        "hostid": {
          "description": "Host ID",
          "title": "Hostid",
          "type": "integer"
        },
        "homing": {
          "allOf": [
            {
              "$ref": "#/$defs/homing"
            }
          ],
          "default": "LSN",
          "description": "Homing direction"
        },
        "CONFIG": {
          "default": "set axes = __utils__.counters[\"motorTML.axisCount\"].current\nndsCreateDevice \"TechnosoftTML\", \"\", \"FILE=/tmp/,NAXIS={{axes}},DEV_PATH=/dev/ttyS0,HOST_ID={{hostid}},",
          "description": "TML Configuration",
          "title": "Config",
          "type": "string"
        },
        "axisConfiguration": {
          "default": "{{ __utils__.set_var('motorTML.axisConfiguration',[]) }}",
          "description": "collects the axis configuration from axis entities",
          "title": "Axisconfiguration",
          "type": "string"
        }
      },
      "required": [
        "controllerName",
        "P",
        "TTY",
        "hostid"
      ],
      "title": "motorTML_Controller",
      "type": "object"
    }
  },
  "additionalProperties": false,
  "properties": {
    "ioc_name": {
      "description": "Name of IOC instance",
      "title": "Ioc Name",
      "type": "string"
    },
    "description": {
      "description": "Description of what the IOC does",
      "title": "Description",
      "type": "string"
    },
    "entities": {
      "description": "List of entities this IOC instantiates",
      "items": {
        "discriminator": {
          "mapping": {
            "motorTML.Axis": "#/$defs/motorTML_Axis",
            "motorTML.Controller": "#/$defs/motorTML_Controller"
          },
          "propertyName": "type"
        },
        "oneOf": [
          {
            "$ref": "#/$defs/motorTML_Controller"
          },
          {
            "$ref": "#/$defs/motorTML_Axis"
          }
        ]
      },
      "title": "Entities",
      "type": "array"
    }
  },
  "required": [
    "ioc_name",
    "description",
    "entities"
  ],
  "title": "NewIOC",
  "type": "object"
}